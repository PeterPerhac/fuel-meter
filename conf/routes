GET           /                                  controllers.Assets.at(path="/public", file="app/index.html")

GET           /reading/capture                   controllers.ReadingsController.captureForm(registration:String)
GET           /readings/:registration            controllers.ReadingsController.listHtml(registration: String)

GET           /api/readings/:registration        controllers.ReadingsController.list(registration: String)
GET           /api/readings                      controllers.ReadingsController.listAll()
POST          /api/reading                       controllers.ReadingsController.add
DELETE        /api/reading/:id                   controllers.ReadingsController.delete(id: String)

GET           /assets/*file                      controllers.Assets.versioned(path="/public", file: Asset)
